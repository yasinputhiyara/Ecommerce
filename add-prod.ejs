<%- include("../../partials/header") %>

  <link rel="stylesheet" href="/user/stylesheets/profile.css" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
        Ubuntu, Cantarell, sans-serif;
    }

    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      padding: 20px;
    }
  </style>

  <div class="profile-session-container">
    <div class="container-fluid">
      <div class="dashboard">
        <!-- Sidebar -->

        <%- include("../../partials/profileSideBar") %>



          <!-- Main Content -->
          <div class="container w-75 h-100 my-5 py-4 rounded shadow-lg bg-light">
            <div class="col-md-9 col-lg-10 p-4 main-content">
              <!-- Wallet Cards Row -->
              <div class="row mb-4">
                <div class="col-lg-6">
                  <div class="wallet-card p-4 text-white">
                    <div class="card-overlay"></div>
                    <h5 class="mb-3">Current Balance</h5>
                    <h2 id="wallet-balance" class="display-4 fw-bold mb-3">₹ <%= balance.toFixed(2) %>
                    </h2>
                    <div class="d-flex justify-content-between align-items-center">
                      <span>Virtual Wallet</span>
                      <span id="wallet-card-id">**** 1234</span>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="row g-3">
                    <div class="col-6">
                      <div class="transaction-card p-3">
                        <h6 class="text-muted mb-2">Total Income</h6>
                        <h4 id="total-income" class="text-success mb-0">₹ <%= totalIncome.toFixed(2) %>
                        </h4>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="transaction-card p-3">
                        <h6 class="text-muted mb-2">Total Spent</h6>
                        <h4 id="total-spent" class="text-danger mb-0">₹ <%= totalSpent.toFixed(2) %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Transactions Table -->

              <div class="transaction-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <h4 class="mb-0">Transaction History</h4>
                  <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      Filter
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="#" onclick="filterTransactions('all')">All</a>
                      </li>
                      <li><a class="dropdown-item" href="#" onclick="filterTransactions('credit')">Credits</a></li>
                      <li><a class="dropdown-item" href="#" onclick="filterTransactions('debit')">Debits</a></li>
                    </ul>
                  </div>
                </div>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Amount</th>
                      </tr>
                    </thead>
                    <tbody id="transaction-history">
                      <% if (transactionHistory && transactionHistory.length> 0) { %>
                        <% transactionHistory.forEach((transaction, index)=> { %>
                          <tr>
                            <td>
                              <%= index + 1 %>
                            </td>
                            <td>
                              <%= new Date(transaction.transactionDate).toLocaleDateString() %>
                            </td>
                            <td>
                              <%= transaction.description %>
                            </td>
                            <td>
                              <span
                                class="badge <%= transaction.transactionType === 'CREDIT' ? 'badge-credit' : 'badge-debit' %>">
                                <%= transaction.transactionType.toLowerCase() %>
                              </span>
                            </td>
                            <td
                              class="<%= transaction.transactionType === 'CREDIT' ? 'text-success' : 'text-danger' %>">
                              ₹ <%= transaction.transactionAmount.toFixed(2) %>
                            </td>
                          </tr>
                          <% }); %>
                            <% } else { %>
                              <tr>
                                <td colspan="5" class="text-center">No transactions found</td>
                              </tr>
                              <% } %>
                    </tbody>
                  </table>
                </div>
              </div>


              <nav aria-label="Transaction pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                  <% if (hasPrevPage) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo;</a>
                    </li>
                    <% } else { %>
                      <li class="page-item disabled">
                        <a class="page-link" tabindex="-1" aria-disabled="true">&laquo;</a>
                      </li>
                      <% } %>
                        <% for (let i=1; i <=totalPages; i++) { %>
                          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>">
                              <%= i %>
                            </a>
                          </li>
                          <% } %>
                            <% if (hasNextPage) { %>
                              <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>">&raquo;</a>
                              </li>
                              <% } else { %>
                                <li class="page-item disabled">
                                  <a class="page-link" tabindex="-1" aria-disabled="true">&raquo;</a>
                                </li>
                                <% } %>
                </ul>
              </nav>



            </div>

          </div>
      </div>
    </div>
  </div>


   <%- include("../../partials/footer") %>