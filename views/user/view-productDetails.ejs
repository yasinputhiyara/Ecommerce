<%- include("../partials/header") %>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* Container for the main image */
    .main-image-container {
      text-align: center;
      margin-bottom: 15px;

    }

    .main-image {
      width: 50%;
      max-width: 500px;
      height: 400px;
      object-fit: cover;
      border: 2px solid #ccc;
      border-radius: 10px;
    }

    /* Container for thumbnails */
    .thumbnail-container {
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .thumbnail {
      cursor: pointer;
      border: 2px solid transparent;
      border-radius: 5px;
    }

    .thumbnail img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 5px;
    }

    .thumbnail:hover {
      border-color: #007bff;
    }

    /* Navigation Buttons */
    .image-nav-buttons {
      text-align: center;
      margin-top: 10px;
    }

    .image-nav-buttons button {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 10px 15px;
      font-size: 18px;
      cursor: pointer;
      border-radius: 5px;
    }

    .image-nav-buttons button:hover {
      background-color: #0056b3;
    }

    .selection-box {
      display: flex;
      justify-content: flex-start;
      gap: 20px;
    }

    .size-selection,
    .color-selection {
      display: flex;
      flex-direction: column;
    }

    .size-selection h6,
    .color-selection h6 {
      font-weight: 600;
      margin-bottom: 10px;
    }

    .options {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    /* Buttons for size */
    .option-btn {
      padding: 8px 16px;
      font-size: 14px;
      font-weight: bold;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: #f9f9f9;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .option-btn:hover,
    .option-btn.active {
      background-color: #007bff;
      color: #fff;
      border-color: #007bff;
    }

    /* Buttons for color */
    .color-btn {
      width: 30px;
      height: 30px;
      border: 1px solid #ddd;
      border-radius: 50%;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .color-btn:hover,
    .color-btn.active {
      border-color: #007bff;
      transform: scale(1.1);
    }


    /*---------ZOOM IN IMAGE---------*/
    .main-image-container {
      position: relative;
      text-align: center;
      margin-bottom: 15px;
    }

    /* Main image */
    .main-image {
      width: 50%;
      max-width: 500px;
      height: 400px;
      object-fit: cover;
      border: 2px solid #ccc;
      border-radius: 10px;
      cursor: crosshair;
    }

    /* Magnifier container */
    .magnifier {
      position: absolute;
      border: 2px solid #007bff;
      width: 150px;
      height: 150px;
      overflow: hidden;
      border-radius: 50%;
      display: none;
      pointer-events: none;
      z-index: 10;
      background-color: rgba(255, 255, 255, 0.7);
      /* Subtle background for better visibility */
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    /* Zoomed image inside magnifier */
    .magnifier img {
      position: absolute;
      width: 400%;
      /* Adjust for zoom level */
      height: 400%;
      /* Adjust for zoom level */
      pointer-events: none;
    }


    /* review  */

    .rating-input .fa-star {
      font-size: 1.5rem;
      cursor: pointer;
      transition: color 0.3s;
    }

    .rating-input .fa-star.text-warning {
      color: #ffc107 !important;
    }

    .rating-input .fa-star.text-muted {
      color: #ddd !important;
    }
  </style>


  <!-- ##### Breadcumb Area Start ##### -->
  <div class="breadcumb_area bg-img" style="background-image: url(/user/essence/img/bg-img/breadcumb.jpg)">
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-12">
          <div class="page-title text-center">
            <h2>dresses</h2>
