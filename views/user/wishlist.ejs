<%- include("../partials/header") %>

    <link rel="stylesheet" href="/user/essence/css/core-style.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .wishlist-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 20px;
        }

        .wishlist-header {
            background-image: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 20px;
            border-radius: 12px 12px 0 0;
            margin: -30px -30px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .wishlist-header h2 {
            margin: 0;
            font-weight: 600;
        }

        .table {
            margin-bottom: 0;
        }

        .product-thumbnail img {
            max-width: 100px;
            border-radius: 8px;
            transition: transform 0.3s ease;
        }

        .product-thumbnail img:hover {
            transform: scale(1.1);
        }

        .product-name a {
            color: #333;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .product-name a:hover {
            color: #2575fc;
        }

        .btn-add-to-cart {
            background-color: #28a745;
            border-color: #28a745;
            transition: all 0.3s ease;
        }

        .btn-add-to-cart:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

        .btn-remove {
            background-color: #dc3545;
            border-color: #dc3545;
            transition: all 0.3s ease;
        }

        .btn-remove:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

        .empty-wishlist {
            text-align: center;
            padding: 50px;
            background-color: #f1f3f5;
            border-radius: 12px;
        }

        .empty-wishlist i {
            font-size: 3rem;
            color: #6c757d;
            margin-bottom: 20px;
        }
    </style>



    <!-- Hero Section -->
    <div class="breadcumb_area bg-img" style="background-image: url(/user/essence/img/bg-img/breadcumb.jpg)">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2 class="text-dark">Wishlist Collection</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="container">
        <div class="wishlist-container">
            
            <span class="badge bg-light text-dark"><%- products.length %> Items</span>

            <div class="table-responsive">
                <% if (products.length > 0) { %>
                    <table class="table align-middle text-center">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((item) => { %>
                                <tr>
                                    <td class="product-thumbnail">
                                        <img src="/product-images/<%= item.productId.productImages[0] %>" 
                                             alt="<%= item.productId.productName %>" />
                                    </td>
                                    <td class="product-name">
                                        <a href="/product-details/<%= item.productId._id %>">
                                            <%= item.productId.productName %>
                                        </a>
                                    </td>
                                    <td class="price">â‚¹<%= item.productId.salePrice %></td>
                                    <td>
                                        <a href="/product-details/<%= item.productId._id %>" 
                                           class="btn btn-sm btn-add-to-cart me-2">
                                            <i class="fas fa-cart-plus"></i> Buy Now
                                        </a>
                                        <a href="/wishlist/remove/<%= item.productId._id %>" 
                                           class="btn btn-sm btn-remove">
                                            <i class="fas fa-trash-alt"></i> Remove
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="empty-wishlist">
                        <i class="fas fa-heart-broken"></i>
                        <h3>Your Wishlist is Empty</h3>
                        <p class="text-muted">Explore our products and add some items to your wishlist!</p>
                        <a href="/shop" class="btn btn-primary mt-3">Continue Shopping</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <%- include("../partials/footer") %>