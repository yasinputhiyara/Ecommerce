<%- include("../../partials/header") %>

<link rel="stylesheet" href="/user/stylesheets/profile.css" />
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, sans-serif;
  }

  body {
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    padding: 20px;
  }
</style>

<div class="profile-session-container">
  <div class="container-fluid">
    <div class="dashboard">
      <!-- Sidebar -->

      <%- include("../../partials/profileSideBar") %>

      

      <!-- Main Content -->
      <div class="container w-75 h-100 my-5 py-4 rounded shadow-lg bg-light">
        <div class="dash">
          <!-- Header Section -->
          <div class="head1 text-center mb-4">
            <h2 class="dashboard-title text-success fw-bold">Dashboard</h2>
          </div>

          <!-- Profile Overview Section -->
          <div class="profile-overview mb-5">
            <h3 class="section-title text-secondary border-bottom pb-2">
              <%=userData.username %>
            </h3>
            <div class="profile-info mt-4">
              <p class="mb-3">
                <strong>Name:</strong>
                <span class="text-dark"><%=userData.username %></span>
              </p>
              <p class="mb-3">
                <strong>Email:</strong>
                <span class="text-dark"><%=userData.email %></span>
              </p>
              <p class="mb-3">
                <strong>Phone:</strong>
                <span class="text-muted"
                  ><% if(userData.phone){ %> <%= userData.phone %> <% }else {%>
                  Not added <% } %></span
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../../partials/footer") %>
